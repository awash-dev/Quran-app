{
  "expo": {
    "name": "Quran App",
    "slug": "quran-app",
    "version": "1.0.0",
    "orientation": "portrait",

    // This is now the single source for your app icon
    "icon": "./assets/images/favicon.png",

    "scheme": "quranapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.quran42.quranapp"
    },
    "web": {
      "output": "single-page",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {
        "origin": "https://yourapp.com"
      },
      "eas": {
        "projectId": "19eb73d5-8f8e-407e-aa3f-3005a1d9e980"
      }
    }
  }
}
